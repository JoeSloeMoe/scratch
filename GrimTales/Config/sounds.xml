<config>
	<!--Interloper story code-->
	<!--add a soundnode to play the airplane sound same as sounds.xml:Supply_Crate_Plane_lp but with some noise modifications-->
	<!--doesnt seem possible to fade or lower sound volume so airprop sound kinda just cuts off without fade-->
	<insertAfter xpath="/Sounds/SoundDataNode[@name='Supply_Crate_Plane_lp']">
		<SoundDataNode name="Interloper_Supply_Crate_Plane"> <AudioSource name="@:Sounds/Prefabs/AudioSource_Airdrop.prefab"/>
			<Noise ID="5" noise="0" time="3" heat_map_strength="0" heat_map_time="0"/>
			<AudioClip ClipName="@:Sounds/SupplyDrops/Supply_Crate_Plane_lp.wav" Loop="true"/>
			<IgnoreDistanceCheck/>
			<LocalCrouchVolumeScale value="0.5"/> <CrouchNoiseScale value="0.5"/> <NoiseScale value="1"/> <MaxVoices value="3"/> <MaxRepeatRate value="0.01"/> </SoundDataNode>
	</insertAfter>
	<!--END Interloper story code-->
	
	<!--Mary's Revenge story code-->
	<append xpath="/Sounds">
		<!--player sound made after eating Margats Eye. See items.xml:magratsEye -->
		<SoundDataNode name="eatSickSound"> <AudioSource name="@:Sounds/Prefabs/AudioSource_Player.prefab"/>
			<AudioClip ClipName="@:Sounds/Player_Male/player1sick4.wav"/>
			<maxVoicesPerEntity value="1"/>
			<MaxVoices value="10"/> <MaxRepeatRate value="0.01"/>
		</SoundDataNode>
		<!--Magrat's scream-->
		<SoundDataNode name="magratsScream"> <AudioSource name="@:Sounds/Prefabs/AudioSource_ScreamerAlert.prefab"/>
			<AudioClip ClipName="@:Sounds/Enemies/Scout_Zombie/zombiefemalescoutalert2.wav"/>
			<AudioClip ClipName="@:Sounds/Enemies/Scout_Zombie/zombiefemalescoutalert3.wav"/>
			<Channel name="Mouth"/>
			<Priority name="3"/>
			<maxVoicesPerEntity value="1"/>
			<LowestPitch name="0.95"/>
			<HighestPitch name="1.05"/>
			<LocalCrouchVolumeScale value="1.0"/> <CrouchNoiseScale value="0.5"/> <NoiseScale value="1"/> <MaxVoices value="10"/> <MaxRepeatRate value="3"/> 
		</SoundDataNode>

	</append>
	<!--Mary's Revenge story code-->
	
	<!--found gyro, assassins pistol silencer sound-->
	<append xpath="/Sounds">	
		<SoundDataNode name="AP_pistol_s_fire"> <AudioSource name="@:Sounds/Prefabs/AudioSource_WeaponFire.prefab"/> <NetworkAudioSource name="@:Sounds/Prefabs/AudioSource_WeaponFire_Network.prefab"/>
		<Noise ID="0" range="2" noise="3" time="1.7" muffled_when_crouched="0.1" heat_map_strength="0.07" heat_map_time="60"/>
		<AudioClip ClipName="@:Sounds/Weapons/Ranged/Pistol/pistol_s_fire2.wav"/>
		<LocalCrouchVolumeScale value="0.5"/> <CrouchNoiseScale value="1"/> <NoiseScale value="1"/> <MaxVoices value="30"/> <MaxVoicesPerEntity value="10"/> <MaxRepeatRate value="0.001"/> </SoundDataNode>
	</append>
	<!--END found gyro, assassins pistol silencer sound-->
	
</config>